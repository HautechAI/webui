{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "version": "independent",
    "npmClient": "pnpm",
    "command": {
        "version": {
            "ignoreChanges": [".github/**/*", "scripts/**/*", "**/*.md"],
            "message": "chore(release): update packages",
            "conventionalCommits": true,
            "changelogPreset": "angular"
        },
        "publish": {
            "ignoreChanges": [".github/**/*", "scripts/**/*", "**/*.md"]
        }
    }
}